@model Waterworks.Models.View.PriceList.SubscriptionPriceViewModel

@{
    ViewData["Title"] = "WaterSubscriptionPriceListCreate";
}

<h2>Opłaty abonamenowe za wodę</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WaterPriceCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-xs-5">
                    <label asp-for="RodzajKlientaId" class="radio-inline">
                        <input type="radio" asp-for="RodzajKlientaId" name="RodzajKlientaId" value="1" />
                        Osoba fizyczna
                    </label>
                </div>
                <div class="col-xs-5">
                    <label asp-for="RodzajKlientaId" class="radio-inline">
                        <input type="radio" asp-for="RodzajKlientaId" name="RodzajKlientaId" value="2" checked />
                        Podmiot gospodarczy
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OkresRozliczeniowy" class="control-label"></label>
                <input asp-for="OkresRozliczeniowy" class="form-control" />
                <span asp-validation-for="OkresRozliczeniowy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oplata" class="control-label"></label>
                <input asp-for="Oplata" class="form-control" />
                <span asp-validation-for="Oplata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NazwaCennika" class="control-label"></label>
                <input asp-for="NazwaCennika" class="form-control" />
                <span asp-validation-for="NazwaCennika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypCennika" class="control-label"></label>
                <input asp-for="TypCennika" class="form-control" />
                <span asp-validation-for="TypCennika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="WaterPriceList">Back to List</a>
</div>

