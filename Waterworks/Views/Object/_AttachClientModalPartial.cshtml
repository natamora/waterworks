@model Waterworks.Models.View.Client.AttachClientToObjectViewModel
<!-- Modal -->
<div class="modal fade" id="attach-client" tabindex="-1" role="dialog" aria-labelledby="attachClientLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="attachClientLabel">
                    Podepnij klienta
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </h5>
            </div>
            <div class="modal-body">
                <form asp-action="AttachToClient">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group">
                        <label asp-for="NumerKlienta"></label>
                        <input asp-for="NumerKlienta" class="form-control" />
                        <span asp-validation-for="NumerKlienta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Id" class="form-control" value="@(Model.Id)" type="hidden" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>