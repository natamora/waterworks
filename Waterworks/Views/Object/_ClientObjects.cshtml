@model IEnumerable<Waterworks.Models.View.Object.ObjectInListViewModel>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SposobRozliczenia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miejscowosc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KodPocztowy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrDomu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ulica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrLokalu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrDzialki)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SposobRozliczenia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miejscowosc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KodPocztowy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrDomu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ulica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrLokalu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrDzialki)
            </td>
            <td>
                <a asp-action="DetachObjectFromClientAndRedirectToClient" asp-controller="Object" asp-route-objectId=@item.Id asp-route-clientId=@item.IdKlienta>Odepnij obiekt</a> |
                <a asp-action="AdvancedDetails" asp-route-id="@item.Id">Szczegóły</a>

            </td>
        </tr>
}
    </tbody>
</table>
