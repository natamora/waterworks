<div>
    <a asp-action="Index">Wróć do listy</a>
</div>
<div id="print"> </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        
        $(document).ready(function () {
            var active_receiver_checked = false;
            var active_receiver = $('#active_receiver_checkbox');
            var active_receiver_to_hide = $('#active_receiver_form');

            active_receiver.change(function () { //when the rating changes
                if (active_receiver_checked == false) {
                    active_receiver_to_hide.removeClass('hidden');
                    active_receiver_checked = true;
                }
                else {
                    active_receiver_to_hide.addClass('hidden');
                    active_receiver_checked = false;
                } 
            });

            var correspondence_address_checked = false;
            var correspondence_address = $('#correspondence_address_checkbox');
            var correspondence_address_to_hide = $('#correspondence_address_form');

            correspondence_address.change(function () { //when the rating changes
                if (correspondence_address_checked == false) {
                    correspondence_address_to_hide.removeClass('hidden');
                    correspondence_address_checked = true;
                }
                else {
                    correspondence_address_to_hide.addClass('hidden');
                    correspondence_address_checked = false;
                }
            });
            
        });
    </script>
}
