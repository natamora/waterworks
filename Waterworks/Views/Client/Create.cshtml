                </div>
                <div class="form-group row">
                    <div class="col-xs-3">
                        <label asp-for="AktywnyOdbiorca.Miejscowosc" class="control-label"></label>
                        <input asp-for="AktywnyOdbiorca.Miejscowosc" class="form-control input-sm" />
                        <span asp-validation-for="AktywnyOdbiorca.Miejscowosc" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-xs-4">
                        <label asp-for="AktywnyOdbiorca.Ulica" class="control-label"></label>
                        <input asp-for="AktywnyOdbiorca.Ulica" class="form-control input-sm" />
                        <span asp-validation-for="AktywnyOdbiorca.Ulica" class="text-danger"></span>
