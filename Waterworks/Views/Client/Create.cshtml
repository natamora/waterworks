                <input type="checkbox" class="custom-control-input" id="active_receiver_checkbox">
                <label class="custom-control-label">Aktywny odbiorca</label>
            </div>
            <div class="hidden" id="active_receiver_form">
                <hr />
                <div class="form-group row">
                    <div class="col-xs-3">
                        <label asp-for="AktywnyOdbiorca.Imie" class="control-label"></label>
                        <input asp-for="AktywnyOdbiorca.Imie" class="form-control input-sm" />
                        <span asp-validation-for="AktywnyOdbiorca.Imie" class="text-danger"></span>
                    </div>
                    <div class="col-xs-3">
                        <label asp-for="AktywnyOdbiorca.Nazwisko" class="control-label"></label>
